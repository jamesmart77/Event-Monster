    <h1>Welcome to the Events Page</h1>
    <div class="row">
        <div class="col s10 offset-s1">
            <table class="table" id="events-table">
                <thead>
                    <tr>
                        <th scope="col">Event Name</th>
                        <th scope="col">Start Date</th>
                        <th scope="col">End Date</th>
                        <th scope="col">Start Time</th>
                        <th scope="col">End Time</th>
                        {{!-- if user is admin, add column --}} 
                        {{#if admin}}
                            <th scope="col" colspan="2">Header</th>
                        {{/if}}
                    </tr>
                </thead>
                <tbody>
                    {{#if admin}} 
                    {{!-- if admin, include edit/delete buttons --}}
                        {{#each events}}
                            <tr>
                                <td>{{event_name}}</td>
                                <td>{{start_date}}</td>
                                <td>{{end_date}}</td>
                                <td>{{start_time}}</td>
                                <td>{{end_time}}</td>
                                <td>
                                    <a class="edit-event" data-id="{{id}}">
                                        <i class="large material-icons" style="font-size:36px;color:#268ac9">edit</i>
                                    </a>

                                    <a class="delete-event" data-id="{{id}}">
                                        <i class="large material-icons" style="font-size:36px;color:#c9282d">delete</i>
                                    </a>
                                    <a class="signup-event" data-id="{{id}}" data-user-id"{{uid}}">
                                        <i class="large material-icons" style="font-size:36px;color:#268ac9">face</i>
                                    </a>
                                </td>
                            </tr>
                        {{/each}} 
                    {{else}}
                    {{!-- if not admin, no edit/delete buttons --}}
                        {{#each events}}
                            <tr>
                                <td>{{event_name}}</td>
                                <td>{{start_date}}</td>
                                <td>{{end_date}}</td>
                                <td>{{start_time}}</td>
                                <td>{{end_time}}</td>
                                <td>
                                    <a class="signup-event" data-id="{{id}}">
                                        <i class="large material-icons" style="font-size:36px;color:#268ac9">face</i>
                                    </a>
                                </td>
                            </tr>
                        {{/each}} 
                    {{/if}}
                </tbody>
            </table>
        </div>

    </div>
