<!-- Modal Trigger -->
<h1>Welcome to the Events Page
    <a style='margin-left: 40px;' href="#newEvent" class="btn-floating btn-large waves-effect waves-light modal-trigger">
        <i class="material-icons">add</i>
    </a>
</h1>
<div class="row">
    <div class="col s10 offset-s1">
        <table class="table highlight responsive-table" id="events-table">
            <thead>
                <tr>
                    <th scope="col">Event Name</th>
                    <th scope="col">Start Date</th>
                    <th scope="col">End Date</th>
                    <th scope="col">Start Time</th>
                    <th scope="col">End Time</th>
                    <th scope="col" colspan="2"></th>
                </tr>
            </thead>
            <tbody>
                {{#each events}}
                <tr>
                    <td>{{event_name}}</td>
                    <td>{{formattedStartDate}}</td>
                    <td>{{formattedEndDate}}</td>
                    <td>{{start_time}}</td>
                    <td>{{end_time}}</td>
                    <td>
                        <a class="event-see" data-id="{{id}}">
                            <i class="link large material-icons see-event" style="font-size:36px">visibility</i>
                        </a>
                        <a class="event-signup" data-id="{{id}}">
                            <i class="link large material-icons signup-event" style="font-size:36px">face</i>
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<!-- This is for the create event modal -->
{{#if admin}} {{> events.create }} {{/if}}

<script src="../assets/js/events.js"></script>