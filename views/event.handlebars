<div class="row">
    <div class="col s12">
        <div class="card grey lighten-4 card small">
            <div class="card-content grey-text text-darken-4">
                <span class="card-title">Event Details</span>
                <div class="col s6">
                    <div class="row">
                        <p>
                            <strong>Event Name</strong>
                            <br>
                            <div id="event-name"> {{event.event_name}}</div>
                        </p>
                    </div>
                    <div class="row">
                        <p>
                            <strong>Start Date</strong>
                            <br>
                            <div id="event-start-date"> {{startDate}}</div>
                        </p>
                    </div>
                    <div class="row">
                        <p>
                            <strong>End Date</strong>
                            <br>
                            <div id="event-end-date"> {{endDate}}</div>
                        </p>
                    </div>
                </div>

                <div class="col s6">
                    <div class="row">
                        <p>
                            <strong>Start Time</strong>
                            <br>
                            <div id="event-start-time"> {{event.start_time}}</div>
                        </p>
                    </div>
                    <div class="row">
                        <p>
                            <strong>End Time</strong>
                            <br>
                            <div id="event-end-time"> {{event.end_time}}</div>
                        </p>
                    </div>
                </div>

            </div>
            {{#if admin}}
            {{!-- <a class="btn-floating halfway-fab waves-effect waves-light teal edit-event" data-id={{event.id}}>
                <i class="material-icons">edit</i>
            </a> --}}

            <div class="fixed-action-btn">
                <a class="btn-floating btn-large orange">
                    <i class="large material-icons">list</i>
                </a>
                <ul>
                    <li>
                        <a class="btn-floating red delete-event" data-id={{event.id}}>
                            <i class="material-icons">delete</i>
                        </a>
                    </li>
                    <li>
                        <a class="btn-floating blue edit-event" data-id={{event.id}}>
                            <i class="material-icons">edit</i>
                        </a>
                    </li>
                </ul>
            </div>
            {{/if}}
        </div>
    </div>
</div>

<h2>Signed Up Volunteers</h2>
<div class="row">
    <div class="col s10 offset-s1">
        <table class="table" id="events-table">
            <thead>
                <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Date</th>
                    {{#if admin}}
                    <th scope="col" colspan="2"></th>
                    {{/if}}
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>

</div>

<!-- This is for the edit event modal -->
{{#if admin}} {{> events.create }} {{/if}}

