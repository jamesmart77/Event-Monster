<div class="row">
    <div class="col s10 offset-s1">
        <div class="card">
            <div class="card-image">
                <img src="{{event.imgUrl}}">
            </div>
        </div>
        <div class="card grey lighten-4 card small">
            <div class="card-content grey-text text-darken-4">
                <span class="card-title event-detail-title center">{{event.event_name}}</span>
                <div class="divider"></div>
                <div class="col s3">
                    <div class="row field-row">
                        <div class="event-field-label">
                            <strong>Start Date</strong>
                        </div>
                        <br>
                        <div class="event-field" id="event-start-date"> {{startDate}}</div>
                    </div>
                    </div>
                    <div class="col s3">
                    <div class="row field-row">
                        <div class="event-field-label">
                            <strong>End Date</strong>
                        </div>
                        <br>
                        <div class="event-field" id="event-end-date"> {{endDate}}</div>
                    </div>
                    </div>
                

                <div class="col s3">
                    <div class="row field-row">
                        <div class="event-field-label">
                            <strong>Start Time</strong>
                        </div>
                        <br>
                        <div class="event-field" id="event-start-time"> {{event.start_time}}</div>
                    </div>
                </div>
                <div class="col s3">
                    <div class="row field-row">
                        <div class="event-field-label">
                            <strong>End Time</strong>
                        </div>
                        <br>
                        <div class="event-field" id="event-end-time"> {{event.end_time}}</div>
                    </div>
                </div>

                {{#if admin}} {{!--
                <a class="btn-floating halfway-fab waves-effect waves-light teal edit-event" data-id={{event.id}}>
                    <i class="material-icons">edit</i>
                </a> --}}

                <div class="fixed-action-btn">
                    <a class="btn-floating btn-large orange">
                        <i class="large material-icons">list</i>
                    </a>
                    <ul>
                        <li>
                            <a class="btn-floating red delete-event" data-id={{event.id}}>
                                <i class="material-icons">delete</i>
                            </a>
                        </li>
                        <li>
                            <a class="btn-floating blue edit-event" data-id={{event.id}}>
                                <i class="material-icons">edit</i>
                            </a>
                        </li>
                    </ul>
                </div>
                {{/if}}
            </div>

        </div>
    </div>
</div>


<div class="row">
    <div class="col s10 offset-s1 volunteer-table">
        <h3 class="volunteer-header center grey lighten-3" style="padding: 20px; margin-bottom:0px">Volunteers</h3>
        <div class="z-depth-2">
        <table class="table highlight responsive-table grey lighten-2" id="events-table">
            <thead class="black">
                <tr>
                    <th class="event-th" scope="col">Photo</th>
                    <th class="event-th" scope="col">First Name</th>
                    <th class="event-th" scope="col">Last Name</th>
                    {{#if admin}}
                    <th class="event-th" scope="col">Controls</th>
                    {{/if}}
                </tr>
            </thead>
            <tbody>
                {{#each users}} 
                    {{#if active}}
                        <tr>
                            <td class="event-td">
                                <img class="event-volunteer-img" src="{{imgUrl}}" height="100" alt="volunteer photo">
                            </td>
                            <td class="event-td">{{first_name}}</td>
                            <td class="event-td">{{last_name}}</td>
                            {{#if ../admin}}
                            <td>
                                <a class="user-see" data-userID="{{id}}">
                                    <i class="large material-icons see-user" style="font-size:36px">visibility</i>
                                </a>
                                <a class="user-delete" data-userID="{{id}}">
                                    <i class="large material-icons remove-user" style="font-size:36px">delete</i>
                                </a>
                            </td>
                            {{/if}}
                        </tr>
                    {{/if}} 
                {{/each}}
            </tbody>
        </table>
        </div>
    </div>

</div>


<!-- This is for the edit event modal -->
{{#if admin}} {{> events.create }} {{/if}}

<script src="/assets/js/event_show.js"></script>