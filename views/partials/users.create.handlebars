<!-- Modal Structure -->
<div id="modal1" class="modal modal-fixed-footer">
    <div class="modal-content">
        <h4>User Information</h4>
        <div class="row">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s6">
                        <label for="first_name">First Name</label>
                        <input class="left-alert validate" id="first_name" name="first_name" type="text" placeholder="First Name" data-error="wrong"
                            data-success="right">
                    </div>

                    <div class="input-field col s6">
                        <label for="last_name">Last Name</label>
                        <input class="left-alert validate" id="last_name" name="last_name" type="text" placeholder="Last Name" data-error="wrong"
                            data-success="right">
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s6">
                        <label for="email">Email</label>
                        <input class="left-alert validate" id="modal-email" name="email" type="email" placeholder="Email" data-error="wrong" data-success="right">
                    </div>

                    <div class="input-field col s6">
                        <label for="password">Password</label>
                        <i class="material-icons prefix right password-icon link" onclick="togglePassword()">visibility</i>
                        <input class="left-alert validate" id="password" name="password" type="password" placeholder="Password" data-error="wrong"
                            data-success="right">
                    </div>
                </div>

                <div class="row">
                    <div class="switch col s6">
                        <label>
                            User
                            <input id="role-switch" type="checkbox">
                            <span class="lever"></span>
                            Admin
                        </label>
                    </div>

                    <div class="switch col s6">
                        <label>
                            Disabled
                            <input id="active-switch" type="checkbox">
                            <span class="lever"></span>
                            Active
                        </label>
                    </div>
                </div>
            </form>
        </div>
    </div>


    <div class="modal-footer" id="create-user">
        <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Submit</a>
    </div>
</div>