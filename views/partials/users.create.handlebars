<!-- Modal Trigger -->
<a class="waves-effect waves-light btn modal-trigger" href="#modal1">Create User</a>

<!-- Modal Structure -->
<div id="modal1" class="modal">
    <div class="modal-content">
        <h4>Create New User</h4>
        <div class="form-group">
            <label for="first_name">First Name</label>
            <input id="first_name" name="first_name" type="text" class="form-control" placeholder="Enter Name">
            <label for="last_name">Last Name</label>
            <input id="last_name" name="last_name" type="text" class="form-control" placeholder="Enter Name">
            <label for="email">Email</label>
            <input id="email" name="email" type="text" class="form-control" placeholder="Enter Email">
            
        </div>
    </div>
    <div class="modal-footer" id="create-user">
        <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Submit</a>
    </div>
</div>