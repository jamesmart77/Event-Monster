<div class="login-body">
  <div class="row">
    <div class="col s4 offset-s4">
      <h2>Log in to get started.</h2>
      <form class="create-form" id="login-form">
        <div class="form-group">
          <label for="email">Email:</label>
          <input type="email" id="email" name="emailAddress">
          <br>
          <label for="password">Password:</label>
          <input type="password" id="password" name="passwordName">
        </div>
        <button class="waves-light btn" id="login-submit-btn" type="submit">Submit</button>
      </form>
    </div>
  </div>
</div>
<div class="row login-img-row">
    <div class="col s12">
      <img class="hands-img"src="/assets/images/hands-background.png">
    </div>
  </div>


