<!-- Modal Trigger -->
<h1>All Users
    <a style='margin-left: 40px;' id="add-user-btn" href="#modal1" class="btn-floating btn-large waves-effect waves-light modal-trigger">
        <i class="material-icons">add</i>
    </a>
</h1>
<div class="row">
    <div class="col s10 offset-s1">
        <table class="table highlight responsive-table" id="users-table">
            <thead>
                <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Email Address</th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <td>{{first_name}}</td>
                    <td>{{last_name}}</td>
                    <td>{{email}}</td>
                    <td>
                        <a class="user-see" data-id="{{id}}">
                            <i class="large material-icons see-event" style="font-size:36px">visibility</i>
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
<!-- This is for the create User modal -->

{{#if admin}} {{> users.create }} {{/if}}
<script src="/assets/js/users.js"></script>