
    <h1>Welcome to the Users Page</h1>
    <br>
    {{!-- <button type="submit" id="create-user">New User</button> --}}
    <br>
    <br>
    <div class="row">
        <div class="col s10 offset-s1">
            <table id="users-table">
                <thead>
                    <tr>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email Address</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr>
                        <td>{{first_name}}</td>
                        <td>{{last_name}}</td>
                        <td>{{email}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <!-- This is for the create User modal -->

{{#if admin}} 
    {{> users.create }}
{{/if}}   
    <script src="/assets/js/users.js"></script>